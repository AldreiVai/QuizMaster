<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:background="@drawable/white">
    <LinearLayout
        android:id="@+id/layoutCounters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp"
        >



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/twox"
            />

        <TextView
            android:id="@+id/tvScorex2Counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginEnd="32dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/right_arrow" />

        <TextView
            android:id="@+id/tvSkipCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginEnd="32dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/seconds" />

        <TextView
            android:id="@+id/tv30SecCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textViewQuizCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1 of 10"
        android:textSize="18sp"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct: 0"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/textViewQuizCounter" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question text goes here"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_below="@+id/textViewScore"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:text="Option 1"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:text="Option 2"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:text="Option 3"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#000000"
            android:text="Option 4"
            android:textSize="18sp" />
    </RadioGroup>



    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="18sp"
        android:fontFamily="@font/font"

        android:layout_below="@+id/radioGroupAnswers"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonVoiceInput"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/radioGroupAnswers"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/microphone"
        android:contentDescription="Voice Input"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupAnswers"
        android:layout_marginTop="124dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"

            android:text="Skip"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button30sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"

            android:text="30 sec"
            android:textSize="18sp"
            android:layout_marginLeft="16dp" />


    </LinearLayout>

</RelativeLayout>
