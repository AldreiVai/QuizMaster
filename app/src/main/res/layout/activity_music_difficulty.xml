<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white">
    <LinearLayout
        android:id="@+id/layoutCounters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/twox" />
        <TextView
            android:id="@+id/tvScorex2Counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/right_arrow" />
        <TextView
            android:id="@+id/tvSkipCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/seconds" />
        <TextView
            android:id="@+id/tv30SecCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text=" : 0"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="521dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="Select Music Difficulty:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy \ud83d\udc7c"

            android:layout_marginBottom="10dp"

            android:textColor="#FFFFFF"
            android:fontFamily="@font/font"/>

        <Button
            android:id="@+id/btnMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium \ud83d\ude42"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"

            android:fontFamily="@font/font"/>

        <Button
            android:id="@+id/btnHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:text="Hard \ud83d\ude08"
            android:fontFamily="@font/font"/>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"

            android:text="Back to Home"
            android:fontFamily="@font/font"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>