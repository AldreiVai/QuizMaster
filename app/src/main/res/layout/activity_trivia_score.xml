<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white">

    <TextView
        android:id="@+id/textViewScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="81dp"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:text="Your Score is"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginTop="201dp"
        android:text="0"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textViewPreviousScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="379dp"
        android:text="Your Previous Score was: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewPreviousScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="426dp"
        android:text="0"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonTryAgain"
            android:layout_width="200dp"
            android:fontFamily="@font/font"

            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Try Again?" />

        <Button
            android:id="@+id/buttonScore2x"
            android:layout_width="200dp"
            android:fontFamily="@font/font"

            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="x2 Score" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="200dp"
            android:fontFamily="@font/font"

            android:layout_height="wrap_content"

            android:text="Return to Home" />


    </LinearLayout>


</RelativeLayout>